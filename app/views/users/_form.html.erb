<%= form_for(@user) do |f| %>

  <%= render 'error_messages' %>

  <%= f.label :ID：ランキングで登録名が公表されます。実名や他人の名前での登録は控えてください。 %>
  <%= f.text_field :name, class: 'form-control', placeholder: "３〜７文字程度（半角or全角：Max10文字）" %>

  <%= f.label :パスワード %>
  <%= f.password_field :password, class: 'form-control', placeholder: "半角英数字４文字以上" %>

  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.label :世帯人数（＊ランキングに必要な情報です） %>
  <%= f.number_field :setai, class: 'form-control', placeholder: "半角の数字" %>

  <%= f.label :プロフィール画像 %>
  <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
            alert('最大5MBです。5MBよりも小さい画像を選んでください。');
      }
  });
</script>