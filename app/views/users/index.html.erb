<div class="ribbon-wrap">
  <h1 class="ribbon">ランキング</h1>
</div>
<div class="contents">
  <h2 class="text-small hr-bottom--thin">
    <i class="icon-crown"></i>CO<sub>2 </sub>排出量<%= image_tag 'co2.jpeg', :size => "80x80" %>
  </h2>
  <ul class="ranking">
    <% @ranking1.each.with_index(1) do |user, i| %>
      <li>
        <% if i == 1 || i == 2 || i == 3 %>
          <%= image_tag 'ha.png', :size => "40x40", :class => "ha" %><%= i %>位
        <% else %>
          <%= i %>位
        <% end %>
        <% if user.avatar_file_name.blank? %>
          <div class="image2"><%= image_tag 'alt.png', :size => "100x100" %></div>
        <% else %>
          <div class="image2" style="background-image: url(<%= user.avatar.url(:medium) %>);"></div>
        <% end %>
        <h3 class="rank">
          <%= user.name %>　<%= ((Kakeibo.where(user_id: user.id).sum(:env_load)) / user.setai / (Kakeibo.where(user_id: user.id).group(:month).sum(:env_load).count)).round(2) %> kg<sub>/人/月</sub>
        </h3>
      </li>
    <% end %>
  </ul>
</div>
