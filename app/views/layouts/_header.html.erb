
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script>
$(function(){
  $("#menubtn").click(function(){
    $("#menu").slideToggle();
  });
});
</script>
<div class="navbar navbar-inverse navbar-fixed-top">
<header class="header">
  <div class="header__bar row">
    <% if logged_in? %>
      <div class="user_nav grid-6">
        <% if current_user.avatar_file_name.blank? %>
          <div class="image1"><%= image_tag 'ha.png', :size => "100x100" %></div>
        <% else %>
          <div class="image1" style="background-image: url(<%= current_user.avatar.url(:medium) %>);"></div>
        <% end %>
          <span><%= current_user.name %>
            <ul class="user__info">
              <li><a href="/users/<%= current_user.id %>", class="btn">マイページ</a></li>
              <li><%= link_to "ログアウト", logout_path, method: "delete", class: "btn" %></li>
              <li><%= link_to "設定", edit_user_path(current_user), class: "btn" %></li>
            </ul>
          </span>
          <button type="button" id="menubtn">
            <i class="fa fa-bars"></i><span>MENU</span>
          </button>
          <nav class="menu" id="menu">
            <ul class="user__info">
              <li><a class="btn" href="/kakeibos/new">家計簿入力</a></li>
              <li><a class="btn" href="/meals/new">食事入力</a></li>
            </ul>
          </nav>
      </div>
    <% else %>
      <div class="grid-6">
        <%= link_to "ログイン", login_path, class: "post" %>
        <%= link_to "新規登録", signup_path, class: "post" %>
      </div>
    <% end %>
  </div>
</header>
</div>